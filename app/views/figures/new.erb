<h2>Create New Figure</h2>

<!-- add content here -->

<form method = "post" action = "/figures">
  <label>Name:</label>
  <input type = "text" name = "figure[name]" id = "figure_name"><br>

  <label>Choose an existing title:</label>
  <br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
    <%=title.name%></input>
<%end%>
<br>
  <label>and/or, create a new title:</label>
  <br>
  <label>Name:</label>
    <input  type="text" name="title[name]" id="new_title"></input>
  <br>

  <label>Choose an existing landmark:</label>
  <br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
    <%=landmark.name%></input>
  <%end%>
  <br>
  <label>and/or, create a new landmark:</label>
  <br>
  <label>Name:</label>
    <input  type="text" name="landmark[name]" id="new_landmark"></input>
  <label>Year Completed:</label>
    <input  type="number" name="landmark[year_completed]"></input>
  <br>


  <input type = "submit" value = "Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
